#!/bin/sh

exec 2>&1
if [ -n "$PG_AUTOCTL" ]; then install -d -m 1775 -o "$USER" -g "$GROUP" "/tmp/pg_autoctl"
else install -d -m 0750 -o "$USER" -g "$GROUP" "$PGDATA"; fi
install -d -m 1775 -o "$USER" -g "$GROUP" /run/postgresql /var/log/postgresql
if [ "$(pgrep runsvdir | wc -l)" -gt "0" ]; then
    install -d -m 0750 -o "$USER" -g "$GROUP" "$HOME/pg_arclog" "$HOME/pg_log" "$HOME/pg_rman"
    chmod 755 supervise
    chown "$USER":"$GROUP" supervise/ok supervise/control supervise/status
fi
rm -f /run/postgresql/postgres.run "$PGDATA/postmaster.pid"
realpath "$0"
set -ex
test -d "$PGDATA/base" || chpst -u "$USER":"$GROUP" /etc/service/postgres/init
test -d "$PGDATA/base"
if [ -n "$PG_AUTOCTL" ]; then
    if [ -n "$PG_AUTOCTL_MONITOR" ]; then
        FORMATION="$(chpst -u "$USER":"$GROUP" pg_autoctl config get pg_autoctl.formation)"
        GROUPID="$(chpst -u "$USER":"$GROUP" pg_autoctl config get pg_autoctl.group)"
        if [ "$(chpst -u "$USER":"$GROUP" pg_autoctl show state --group "$GROUPID" --formation "$FORMATION" | grep "$(hostname)" | wc -l)" -eq "0" ]; then
            chpst -u "$USER":"$GROUP" pg_autoctl drop node
            if [ -n "$PG_AUTOCTL_SERVER_CERT" ]; then SERVER_CERT="--server-cert $PG_AUTOCTL_SERVER_CERT"; fi
            if [ -n "$PG_AUTOCTL_SERVER_KEY" ]; then SERVER_KEY="--server-key $PG_AUTOCTL_SERVER_KEY"; fi
            if [ -n "$PG_AUTOCTL_SSL_CA_FILE" ]; then SSL_CA_FILE="--ssl-ca-file $PG_AUTOCTL_SSL_CA_FILE"; fi
            if [ -n "$PG_AUTOCTL_SSL_CRL_FILE" ]; then SSL_CRL_FILE="--ssl-crl-file $PG_AUTOCTL_SSL_CRL_FILE"; fi
            if [ -z "$SERVER_CERT" ] && [ -z "$SERVER_KEY" ]; then NO_SSL="--no-ssl"; fi
            chpst -u "$USER":"$GROUP" pg_autoctl create postgres \
                $NO_SSL \
                $SERVER_CERT \
                $SERVER_KEY \
                $SSL_CA_FILE \
                $SSL_CRL_FILE \
                --formation "${PG_AUTOCTL_FORMATION:-default}" \
                --hostname "$(hostname)" \
                --monitor "$PG_AUTOCTL_MONITOR" \
                --name "${PG_AUTOCTL_NAME:-$(hostname)}" \
                --replication-quorum "${PG_AUTOCTL_REPLICATION_QUORUM:-true}" \
                --skip-pg-hba \
                --ssl-mode "${PG_AUTOCTL_SSL_MODE:-allow}"
        fi
    else
        rm -rf /etc/service/pgbouncer
    fi
    exec chpst -u "$USER":"$GROUP" -L /run/postgresql/postgres.run pg_autoctl run
else
    rm -rf /etc/service/pglisten
    exec chpst -u "$USER":"$GROUP" -L /run/postgresql/postgres.run postmaster
fi
